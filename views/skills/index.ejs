<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Document</title>
</head>
<body>
  <h1> <%=title%> </h1>
  <% if(error) { %>
    <h2><%= error %></h2>
  <% } %>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <a href="/skills/<%=skill._id%>"><%= skill.skill %></a>
          - 
        <%= skill.fromSeir ? 'Learned this with the 8-Bit Crew' : 'Pre-SEIR Knowledge' %>
        <ul>
          <li>
            <%= skill.description %>
          </li>
        </ul>
      </li>

    <% }) %>
  </ul>
  <a href="/skills/new">Level Up</a>
</body>
</html>